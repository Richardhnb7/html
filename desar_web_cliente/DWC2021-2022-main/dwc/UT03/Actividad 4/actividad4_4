<body>
    <script>
        let palabra = "miguel"

        for (let i = palabra.length - 1; i > 0; i--)
            document.write(`${palabra[i]} <br>`)

        for (let i in palabra)
            document.write(`${palabra.charAt(palabra.lenght - i)} <br>`)
            console.log(`${palabra.length} ${i} ${palabra.lenght-1}`)
    </script>
</body>

